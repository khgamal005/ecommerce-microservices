{
  "compileOnSave": false,
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",

    "declarationMap": true,
    "emitDeclarationOnly": false,
    "importHelpers": true,
    "isolatedModules": true,

    "baseUrl": ".",
    "rootDir": ".",

    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",

    "customConditions": ["@my-app/source"],

    "paths": {
      "@packages/*": ["packages/*"],
      "@packages/prisma": ["packages/libs/prisma/index"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
