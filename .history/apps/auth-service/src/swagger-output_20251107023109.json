  },
  "host": "localhost:6001",
  "basePath": "/api",
  "schemes": [
    "http"
  ],
  "paths": {
"/register": {
  "post": {
    "description": "Register a new user",
    "parameters": [
      {
        "name": "body",
        "in": "body",
        "required": true,
        "schema": {
          "type": "object",
          "properties": {
            "name": {
              "example": "khaled"
            },
            "email": {
              "example": "khgamal005@gmail.com"
            },
            "password": {
              "example": "password123"
            }
          }
        }
      }
    ],
    "responses": {
      "201": {
        "description": "OTP sent to user email"
      }
    }
  }
}

    "/verify": {
