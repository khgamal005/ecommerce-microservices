{
  "name": "auth-service",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/auth-service/src",
  "projectType": "application",
  "targets": {
    "swagger-generate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node apps/auth-service/src/swagger.js",
        "cwd": "apps/auth-service"
      }
    },
    "prisma-generate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prisma generate --schema=../../packages/libs/prisma/schema.prisma"
      }
    },
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/auth-service",
        "format": ["cjs"],
        "bundle": true,
        "thirdParty": false,
        "main": "apps/auth-service/src/main.ts",
        "tsConfig": "apps/auth-service/tsconfig.app.json",
        "assets": [
          "apps/auth-service/src/assets",
          {
            "input": "apps/auth-service/src",
            "glob": "swagger-output.json",
            "output": "src"
          }
        ],
        "generatePackageJson": true
      },
      "dependsOn": ["swagger-generate", "prisma-generate"]
    },
    "serve": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "auth-service:build"
      },
      "dependsOn": ["build"]
    }
  }
}