{
  "openapi": "3.0.0",
  "info": {
    "title": "Product Service API",
    "version": "1.0.0",
    "description": "API documentation for product, categories, discounts, and image upload."
  },

  "paths": {
    "/product/api/get-categories": {
      "get": {
        "tags": ["Categories"],
        "summary": "Get categories and subcategories",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Successful response" },
          "400": { "description": "No categories found" }
        }
      }
    },

    "/product/api/create-discount-code": {
      "post": {
        "tags": ["Discount"],
        "summary": "Create discount code",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "public_name": { "type": "string" },
                  "discount_type": {
                    "type": "string",
                    "enum": ["percentage", "fixed"]
                  },
                  "discount_value": { "type": "number" },
                  "discount_code": { "type": "string" }
                },
                "required": [
                  "public_name",
                  "discount_type",
                  "discount_value",
                  "discount_code"
                ]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Discount created" },
          "400": { "description": "Invalid request" }
        }
      }
    },

    "/product/api/get-discount-codes": {
      "get": {
        "tags": ["Discount"],
        "summary": "Get all discount codes for seller",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "List of codes" }
        }
      }
    },

    "/product/api/delete-discount-code/{id}": {
      "delete": {
        "tags": ["Discount"],
        "summary": "Delete discount code",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Deleted successfully" },
          "404": { "description": "Not found" }
        }
      }
    },

    "/product/api/upload-image": {
      "post": {
        "tags": ["Product"],
        "summary": "Upload a product image (base64)",
        "requestBody": {
          "required": true,
          "content": {
            "text/plain": {
              "schema": {
                "type": "string",
                "example": "data:image/png;base64,iVBORw0KGg..."
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Image uploaded successfully" },
          "400": { "description": "Invalid base64 or empty" }
        }
      }
    },

    "/product/api/shop-products": {
      "get": {
        "tags": ["Product"],
        "summary": "Get products for the authenticated seller",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Products fetched successfully"
          },
          "401": { "description": "Unauthorized" },
          "500": { "description": "Internal server error" }
        }
      }
    },

    "/product/api/create-product": {
      "post": {
        "tags": ["Product"],
        "summary": "Create a new product",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": { "type": "string" },
                  "short_description": { "type": "string" },
                  "detailed_description": { "type": "string" },
                  "warranty": { "type": "string" },
                  "cashOnDelivery": { "type": "string" },
                  "custom_specifications": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "key": { "type": "string" },
                        "value": { "type": "string" }
                      }
                    }
                  },
                  "slug": { "type": "string" },
                  "tags": {
                    "oneOf": [
                      { "type": "string" },
                      { "type": "array", "items": { "type": "string" } }
                    ]
                  },
                  "video_Url": { "type": "string" },
                  "brand": { "type": "string" },
                  "category": { "type": "string" },
                  "subCategory": { "type": "string" },
                  "stock": { "type": "integer" },
                  "colors": { "type": "array", "items": { "type": "string" } },
                  "sizes": { "type": "array", "items": { "type": "string" } },
                  "sale_price": { "type": "number" },
                  "regular_price": { "type": "number" },
                  "discountCodes": { "type": "array", "items": { "type": "string" } },
                  "images": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "fileId": { "type": "string" },
                        "file_Url": { "type": "string" }
                      }
                    }
                  },
                  "customProperties": { "type": "object" }
                },
                "required": [
                  "title",
                  "category",
                  "slug",
                  "sale_price",
                  "regular_price",
                  "stock",
                  "images",
                  "short_description",
                  "subCategory"
                ]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Product created successfully" },
          "400": { "description": "Validation error / Duplicate slug or image" },
          "500": { "description": "Internal server error" }
        }
      }
    },

    "/product/api/delete-product/{productId}": {
      "delete": {
        "tags": ["Product"],
        "summary": "Soft delete a product",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "productId",
            "schema": { "type": "string" },
            "required": true
          }
        ],
        "responses": {
          "200": { "description": "Product deleted successfully" },
          "400": { "description": "Product already deleted" },
          "401": { "description": "Unauthorized" },
          "500": { "description": "Internal server error" }
        }
      }
    },

    "/product/api/restore-product/{productId}": {
      "patch": {
        "tags": ["Product"],
        "summary": "Restore a soft deleted product",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "productId",
            "schema": { "type": "string" },
            "required": true
          }
        ],
        "responses": {
          "200": { "description": "Product restored successfully" },
          "400": { "description": "Product not deleted" },
          "401": { "description": "Unauthorized" },
          "500": { "description": "Internal server error" }
        }
      }
    },

    "/product/api/get-all-products": {
      "get": {
        "tags": ["Products"],
        "summary": "Get all products with pagination, sorting, and top 10 products",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "schema": { "type": "integer", "default": 1 }
          },
          {
            "name": "limit",
            "in": "query",
            "schema": { "type": "integer", "default": 10 }
          },
          {
            "name": "type",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["latest", "rating"],
              "default": "rating"
            }
          }
        ],
        "responses": {
          "200": { "description": "Products fetched successfully" },
          "500": { "description": "Internal server error" }
        }
      }
    }
  },

  "components": {
    "schemas": {
      "Product": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "rating": { "type": "number" },
          "starting_date": { "type": ["string", "null"], "format": "date-time" },
          "ending_date": { "type": ["string", "null"], "format": "date-time" },
          "isDeleted": { "type": "boolean" },
          "deletedAt": { "type": ["string", "null"], "format": "date-time" },
          "images": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/ProductImage" }
          },
          "shop": { "$ref": "#/components/schemas/Shop" }
        }
      },
      "ProductImage": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "file_id": { "type": "string" },
          "url": { "type": "string" }
        }
      },
      "Shop": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" }
        }
      }
    },

    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
