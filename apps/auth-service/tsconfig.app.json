{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "out-tsc/auth-service",
    "rootDir": "../../",
    "types": ["node", "express"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "tsBuildInfoFile": "out-tsc/auth-service/tsconfig.app.tsbuildinfo"
  },
  "files": [
    "src/main.ts",
    "src/swagger-output.json"
  ],
  "include": [
    "src/**/*.ts", 
    "src/**/*.json",
    "../../packages/**/*"
  ],
  "exclude": [
    "out-tsc",
    "dist",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}