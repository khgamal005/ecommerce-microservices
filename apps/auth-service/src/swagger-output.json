{
  "swagger": "2.0",
  "info": {
    "title": "Auth Service API",
    "version": "1.0.0",
    "description": "API documentation for Auth Service"
  },
  "host": "localhost:6001",
  "basePath": "/api",
  "schemes": ["http"],
  "paths": {
    "/register-user": {
      "post": {
        "description": "",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": { "example": "khaled" },
                "email": { "example": "khgamal005@gmail.com" },
                "password": { "example": "password123" }
              }
            }
          }
        ],
        "responses": { "201": { "description": "Created" } }
      }
    },

    "/verify-user": {
      "post": {
        "description": "",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": { "example": "any" },
                "email": { "example": "khgamal005@gmail.com" },
                "password": { "example": "password123" },
                "otp": { "example": "1234" }
              }
            }
          }
        ],
        "responses": { "201": { "description": "Created" } }
      }
    },

    "/login-user": {
      "post": {
        "description": "",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "email": { "example": "khgamal005@gmail.com" },
                "password": { "example": "password123" }
              }
            }
          }
        ],
        "responses": { "200": { "description": "OK" } }
      }
    },

    "/forget-password": {
      "post": {
        "description": "Send OTP for password reset",
        "tags": ["Auth"],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": { "email": { "example": "khgamal005@gmail.com" } }
            }
          }
        ],
        "responses": {
          "200": { "description": "OTP sent to user's email" },
          "400": { "description": "Validation error" },
          "404": { "description": "User not found" }
        }
      }
    },

    "/verify-forget-password": {
      "post": {
        "description": "Verify OTP sent for password reset",
        "tags": ["Auth"],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": { "example": "khgamal005@gmail.com" },
                "otp": { "example": "1234" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "OTP verified successfully" },
          "400": { "description": "Validation error / OTP invalid" },
          "404": { "description": "User not found" }
        }
      }
    },

    "/reset-password": {
      "post": {
        "description": "Reset user password using OTP",
        "tags": ["Auth"],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": { "example": "khgamal005@gmail.com" },
                "newPassword": { "example": "newPassword123" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "Password reset successfully" },
          "400": { "description": "Validation error / OTP invalid" },
          "404": { "description": "User not found" }
        }
      }
    },

    "/resend-otp": {
      "post": {
        "description": "Resend OTP to user email for account activation",
        "tags": ["Auth"],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": { "example": "khgamal005@gmail.com" },
                "name": { "example": "Khaled" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "OTP re-sent successfully" },
          "400": { "description": "Validation error or rate limit reached" },
          "404": { "description": "User not found" }
        }
      }
    },

    "/logged-in-user": {
      "get": {
        "description": "Get the currently logged-in user's profile",
        "tags": ["Auth"],
        "responses": {
          "200": { "description": "Profile fetched successfully" },
          "401": { "description": "Unauthorized" }
        }
      }
    },

    "/refresh-token": {
      "post": {
        "description": "Refresh access and refresh tokens",
        "tags": ["Auth"],
        "responses": {
          "200": { "description": "Tokens refreshed successfully" },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Invalid refresh token" }
        }
      }
    },

    "/register-seller": {
      "post": {
        "tags": ["Seller"],
        "description": "Register seller and send OTP",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": { "example": "Khaled Store" },
                "email": { "example": "seller@example.com" },
                "password": { "example": "password123" }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "OTP sent" },
          "400": { "description": "Validation error" },
          "409": { "description": "Seller exists" }
        }
      }
    },

    "/verify-seller": {
      "post": {
        "tags": ["Seller"],
        "description": "Verify seller OTP",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": { "example": "Khaled Store" },
                "email": { "example": "seller@example.com" },
                "password": { "example": "password123" },
                "phone_number": { "example": "+201234567890" },
                "country": { "example": "Egypt" },
                "otp": { "example": "1234" }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "Seller verified" },
          "400": { "description": "Invalid OTP" },
          "409": { "description": "Seller exists" }
        }
      }
    },

    "/create-shop": {
      "post": {
        "tags": ["Shop"],
        "description": "Create a shop for a seller",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "sellerId": { "example": "675fa2c97a32e6ac96c12345" },
                "name": { "example": "Khaled Electronics" },
                "bio": { "example": "We sell electronics" },
                "category": { "example": "Electronics" },
                "address": { "example": "Cairo" },
                "opining_hours": { "example": "9AM - 10PM" },
                "webSite": { "example": "https://shop.com" },
                "socialLinks": { "example": [] }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "Shop created" },
          "409": { "description": "Seller already has a shop" }
        }
      }
    },

    "/create-stripe-connect-account": {
      "post": {
        "tags": ["Stripe"],
        "description": "Create Stripe Connect onboarding link",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "sellerId": { "example": "675cb2e65b1234567890abcd" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "Onboarding link created" },
          "404": { "description": "Seller not found" }
        }
      }
    },

    "/login-seller": {
      "post": {
        "tags": ["Auth"],
        "description": "Login seller",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": { "example": "seller@example.com" },
                "password": { "example": "12345678" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "Seller logged in" },
          "401": { "description": "Invalid credentials" }
        }
      }
    },

    "/logged-in-seller": {
      "get": {
        "tags": ["Auth"],
        "description": "Get seller profile",
        "responses": {
          "200": { "description": "Seller profile returned" },
          "401": { "description": "Not authenticated" }
        }
      }
    },

    "/logout": {
      "post": {
        "tags": ["Auth"],
        "summary": "Logout user/seller",
        "description": "Clears authentication cookies.",
        "responses": {
          "200": { "description": "Logged out successfully" },
          "500": { "description": "Logout error" }
        }
      }
    }
  }
}
