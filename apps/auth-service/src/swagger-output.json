{
  "swagger": "2.0",
  "info": {
    "title": "Auth Service API",
    "version": "1.0.0",
    "description": "API documentation for Auth Service"
  },
  "host": "localhost:6001",
  "basePath": "/api",
  "schemes": ["http"],
  "paths": {
    "/register-user": {
      "post": {
        "description": "",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": { "example": "khaled" },
                "email": { "example": "khgamal005@gmail.com" },
                "password": { "example": "password123" }
              }
            }
          }
        ],
        "responses": { "201": { "description": "Created" } }
      }
    },
    "/verify-user": {
      "post": {
        "description": "",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": { "example": "any" },
                "email": { "example": "khgamal005@gmail.com" },
                "password": { "example": "password123" },
                "otp": { "example": "1234" }
              }
            }
          }
        ],
        "responses": { "201": { "description": "Created" } }
      }
    },
    "/login-user": {
      "post": {
        "description": "",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "email": { "example": "khgamal005@gmail.com" },
                "password": { "example": "password123" }
              }
            }
          }
        ],
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/forget-password": {
      "post": {
        "description": "Send OTP for password reset",
        "tags": ["Auth"],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": { "email": { "example": "khgamal005@gmail.com" } }
            }
          }
        ],
        "responses": {
          "200": { "description": "OTP sent to user's email" },
          "400": { "description": "Validation error" },
          "404": { "description": "User not found" }
        }
      }
    },
    "/verify-forget-password": {
      "post": {
        "description": "Verify OTP sent for password reset",
        "tags": ["Auth"],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": { "example": "khgamal005@gmail.com" },
                "otp": { "example": "1234" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "OTP verified successfully, user can reset password" },
          "400": { "description": "Validation error / OTP invalid" },
          "404": { "description": "User not found" }
        }
      }
    },
    "/reset-password": {
      "post": {
        "description": "Reset user password using OTP",
        "tags": ["Auth"],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": { "example": "khgamal005@gmail.com" },
                "newPassword": { "example": "newPassword123" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "Password reset successfully" },
          "400": { "description": "Validation error / OTP invalid" },
          "404": { "description": "User not found" }
        }
      }
    },
    "/resend-otp": {
      "post": {
        "description": "Resend OTP to user email for account activation",
        "tags": ["Auth"],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": { "example": "khgamal005@gmail.com" },
                "name": { "example": "Khaled" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "OTP re-sent successfully" },
          "400": { "description": "Validation error or rate limit reached" },
          "404": { "description": "User not found" }
        }
      }
    },
    "/logged-in-user": {
      "get": {
        "description": "Get the currently logged-in user's profile using JWT from cookie or Authorization header",
        "tags": ["Auth"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Successfully fetched the logged-in user's profile",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean", "example": true },
                    "message": {
                      "type": "string",
                      "example": "User profile fetched successfully"
                    },
                    "user": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "string", "example": "654f13c29a71a8d74b57d8e2" },
                        "name": { "type": "string", "example": "Khaled Gamal" },
                        "email": { "type": "string", "example": "khgamal005@gmail.com" },
                        "role": { "type": "string", "enum": ["user", "seller", "admin"], "example": "user" },
                        "createdAt": { "type": "string", "format": "date-time", "example": "2025-11-13T00:00:00.000Z" }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized — Missing or invalid token",
            "content": {
              "application/json": {
                "schema": { "type": "object", "properties": { "message": { "type": "string", "example": "Unauthorized: No token provided" } } }
              }
            }
          }
        }
      }
    },
    "/refresh-token": {
      "post": {
        "description": "Refresh access and refresh tokens using the refreshToken cookie",
        "tags": ["Auth"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Tokens refreshed successfully",
            "content": {
              "application/json": {
                "schema": { "type": "object", "properties": { "message": { "type": "string", "example": "Tokens refreshed successfully" } } }
              }
            }
          },
          "401": {
            "description": "Unauthorized — No refresh token provided or missing",
            "content": {
              "application/json": {
                "schema": { "type": "object", "properties": { "message": { "type": "string", "example": "Unauthorized: no refresh token" } } }
              }
            }
          },
          "403": {
            "description": "Forbidden — Invalid refresh token",
            "content": {
              "application/json": {
                "schema": { "type": "object", "properties": { "message": { "type": "string", "example": "Forbidden: invalid refresh token" } } }
              }
            }
          }
        }
      }
    },
        "/register-seller": {
      "post": {
        "description": "Register seller and send OTP to email",
        "tags": ["Seller"],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": { "example": "Khaled Store" },
                "email": { "example": "seller@example.com" },
                "password": { "example": "password123" }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "OTP sent to seller email" },
          "400": { "description": "Validation error" },
          "409": { "description": "Seller already exists" }
        }
      }
    },

    "/verify-seller": {
      "post": {
        "description": "Verify seller registration using OTP",
        "tags": ["Seller"],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": { "example": "Khaled Store" },
                "email": { "example": "seller@example.com" },
                "password": { "example": "password123" },
                "phone_number": { "example": "+201234567890" },
                "country": { "example": "Egypt" },
                "otp": { "example": "1234" }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "Seller verified and created" },
          "400": { "description": "Validation error or OTP invalid" },
          "409": { "description": "Seller already exists" }
        }
      }
    },

    "/create-shop": {
      "post": {
        "description": "Create a shop for a verified seller",
        "tags": ["Shop"],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "sellerId": { "example": "675fa2c97a32e6ac96c12345" },
                "name": { "example": "Khaled Electronics" },
                "bio": { "example": "We sell electronics and accessories" },
                "category": { "example": "Electronics" },
                "address": { "example": "Cairo, Egypt" },
                "opining_hours": { "example": "9AM - 10PM" },
                "webSite": { "example": "https://khaledelectronics.com" },
                "socialLinks": {
                  "example": [
                    { "platform": "facebook", "url": "https://facebook.com/shop" },
                    { "platform": "instagram", "url": "https://instagram.com/shop" }
                  ]
                }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "Shop created successfully" },
          "400": { "description": "Validation error" },
          "409": { "description": "Seller already has a shop" }
        }
      }
    }

  }
}
