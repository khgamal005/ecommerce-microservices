{
  "name": "@my-app/kafka-service",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "node dist/apps/kafka-service/main.js"
  },
  "nx": {
    "name": "kafka-service",
    "sourceRoot": "apps/kafka-service/src",
    "projectType": "application",
    "targets": {
      "serve": {
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": ["build"],
        "options": {
          "buildTarget": "kafka-service:build",
          "runBuildTargetDependencies": false,
          "inspect": false
        },
        "configurations": {
          "development": {
            "buildTarget": "kafka-service:build:development"
          },
          "production": {
            "buildTarget": "kafka-service:build:production"
          }
        }
      },
      "build": {
        "executor": "@nx/esbuild:esbuild",
        "outputs": ["{options.outputPath}"],
        "defaultConfiguration": "production",
        "options": {
          "platform": "node",
          "outputPath": "dist/apps/kafka-service",
          "format": ["cjs"],
          "bundle": true,
          "main": "apps/kafka-service/src/main.ts",
          "tsConfig": "apps/kafka-service/tsconfig.app.json",
          "assets": [
            "apps/kafka-service/src/assets",
            {
              "input": "node_modules/.prisma/client",
              "glob": "**/*",
              "output": "./"
            },
            {
              "input": "node_modules/@prisma/engines",
              "glob": "**/*",
              "output": "./"
            }
          ],
          "esbuildOptions": {
            "sourcemap": true,
            "outExtension": { ".js": ".js" },
            "external": ["@prisma/client", ".prisma", "@prisma/engines"],
            "plugins": []
          }
        },
        "configurations": {
          "development": {
            "esbuildOptions": {
              "sourcemap": true,
              "external": ["@prisma/client", ".prisma", "@prisma/engines"]
            }
          },
          "production": {
            "esbuildOptions": {
              "sourcemap": false,
              "external": ["@prisma/client", ".prisma", "@prisma/engines"]
            }
          }
        }
      }
    }
  },
  "dependencies": {
    "express": "^4.21.2",
    "kafkajs": "^2.2.4"
  }
}